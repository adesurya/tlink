<div class="product-detail-container">
    <div class="product-header">
      <div class="navigation-controls">
        <a href="javascript:history.back()" class="back-btn">
          <i class="fas fa-chevron-left"></i>
        </a>
        <div class="slide-controls">
          <span class="slide-indicator">1/<%= product.images ? product.images.length : 1 %></span>
        </div>
        <div class="action-controls">
          <a href="#" class="share-btn">
            <i class="fas fa-share-alt"></i>
          </a>
          <a href="#" class="refresh-btn">
            <i class="fas fa-sync-alt"></i>
          </a>
        </div>
      </div>
      
      <div class="product-slider">
        <div class="slide-message">
          <h2>SANGAT NYAMAN  MUDAH DIPAKAI!</h2>
        </div>
        <div class="main-image">
          <img src="<%= product.image %>" alt="<%= product.name %>">
        </div>
        
        <div class="bonus-info">
            <% if (product.bonusInfo && product.bonusInfo.length > 0) { %>
              <% product.bonusInfo.forEach(bonus => { %>
                <div class="bonus-item">
                  <h3><%= bonus.title %></h3>
                  <p><%= bonus.description %></p>
                  <% if (bonus.image) { %>
                    <img src="<%= bonus.image %>" alt="<%= bonus.title %>" class="bonus-image">
                  <% } %>
                </div>
              <% }); %>
            <% } else { %>
              <div class="bonus-item">
                <h3>Beli 1 Kotak</h3>
                <p>FREE Pinset</p>
                <img src="/images/accessories/pinset.jpg" alt="Pinset" class="bonus-image">
              </div>
              
              <div class="bonus-item">
                <h3>Beli 2 Kotak</h3>
                <p>(model sama/beda)</p>
                <p>FREE Lem+Pinset+Sikat+microbrush+cincin lem</p>
                <div class="bonus-images">
                  <img src="/images/accessories/accessories-kit.jpg" alt="Accessories kit" class="bonus-image">
                </div>
              </div>
            <% } %>
          </div>
      </div>
    </div>
    
    <div class="commission-panel">
        <div class="commission-header">
          <div class="high-commission-badge">Komisi Tinggi</div>
          <div class="total-commission">Dapatkan <span class="commission-value"><%= product.formattedTotalCommission %></span>/pcs</div>
        </div>
        
        <div class="commission-details">
          <% if (product.commissionSources && product.commissionSources.length > 0) { %>
            <div class="commission-source tiktok">
              <div class="source-logo">
                <i class="<%= product.commissionSources[0].icon %>"></i>
                <span><%= product.commissionSources[0].name %></span>
              </div>
              <div class="source-amount">
                <div class="amount-value"><%= product.commissionSources[0].formattedAmount %></div>
                <div class="amount-rate">Tarif Komisi: <%= product.commissionSources[0].rate %>%</div>
              </div>
            </div>
            
            <div class="commission-plus">+</div>
            
            <div class="commission-source ibooming">
              <div class="source-logo">
                <span class="logo-circle">iB</span>
                <span><%= product.commissionSources[1].name %>&reg;</span>
              </div>
              <div class="source-amount">
                <div class="amount-value"><%= product.commissionSources[1].formattedAmount %></div>
                <div class="amount-rate">Tarif Cashback: <%= product.commissionSources[1].rate %>%</div>
              </div>
            </div>
          <% } else { %>
            <div class="commission-source">
              <div class="source-logo">
                <i class="fas fa-gift"></i>
                <span>Komisi Produk</span>
              </div>
              <div class="source-amount">
                <div class="amount-value"><%= product.formattedTotalCommission %></div>
                <div class="amount-rate">Tarif Komisi: <%= product.commission %>%</div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <div class="product-info">
        <h1 class="product-title"><%= product.name %></h1>
        
        <div class="product-description">
          <p><%= product.description %></p>
        </div>
        
        <div class="product-category">
          <span class="category-label"><%= product.category ? product.category.name : 'Perawatan & Kecantikan' %></span>
        </div>
        
        <div class="product-actions">
            <% if (user) { %>
              <a href="/products/<%= product._id %>/affiliate" class="buy-now-btn">
                <i class="fas fa-shopping-cart"></i> Beli Sekarang
              </a>
            <% } else { %>
              <a href="/auth/login?returnTo=/products/<%= product._id %>/affiliate" class="buy-now-btn">
                <i class="fas fa-shopping-cart"></i> Beli Sekarang
              </a>
            <% } %>
            
            <a href="#" class="add-favorites-btn">
              <i class="far fa-heart"></i> Simpan
            </a>
        </div>
    </div>
    
    <div class="product-tabs">
      <div class="tabs-header">
        <button class="tab-btn active">Detail</button>
        <button class="tab-btn">Ulasan</button>
        <button class="tab-btn">Diskusi</button>
      </div>
      
      <div class="tab-content detail-tab">
        <div class="detail-content">
          <h3>Spesifikasi Produk</h3>
          <ul class="spec-list">
            <% if (product.specifications && product.specifications.length > 0) { %>
              <% product.specifications.forEach(spec => { %>
                <li><strong><%= spec.label %>:</strong> <%= spec.value %></li>
              <% }); %>
            <% } else { %>
              <li><strong>Brand:</strong> <%= product.name.split(' ')[0] %></li>
              <li><strong>Model:</strong> <%= product.name.includes('(') ? product.name.split('(')[1].split(')')[0] : '-' %></li>
              <li><strong>Type:</strong> <%= product.category ? product.category.name : 'Beauty' %> Product</li>
              <li><strong>Bonus:</strong> Beli 1 kotak dapat pinset atau beli 2 kotak dapat lem, pinset, sikat, microbrush, cincin lem</li>
            <% } %>
          </ul>
          
          <h3>Cara Penggunaan</h3>
          <ol class="usage-list">
            <% if (product.howToUse && product.howToUse.length > 0) { %>
              <% product.howToUse.forEach(step => { %>
                <li><%= step %></li>
              <% }); %>
            <% } else { %>
              <li>Bersihkan area mata dari makeup</li>
              <li>Ukur panjang bulu mata dan potong sesuai kebutuhan</li>
              <li>Oleskan lem pada garis bulu mata</li>
              <li>Tunggu hingga lem sedikit mengering (sekitar 30 detik)</li>
              <li>Pasang bulu mata palsu menggunakan pinset</li>
              <li>Tekan perlahan agar menempel dengan baik</li>
            <% } %>
          </ol>
        </div>
      </div>
    </div>
    
    <div class="related-products">
        <h2>Produk Terkait</h2>
        
        <div class="product-grid">
          <% relatedProducts.forEach(relatedProduct => { %>
            <div class="product-card">
              <div class="product-image">
                <img src="<%= relatedProduct.image %>" alt="<%= relatedProduct.name %>">
                <% if (relatedProduct.discountPercentage > 0) { %>
                  <span class="discount-badge">-<%= relatedProduct.discountPercentage %>%</span>
                <% } %>
              </div>
              <div class="product-info">
                <h3 class="product-name"><%= relatedProduct.name.length > 40 ? relatedProduct.name.substring(0, 40) + '...' : relatedProduct.name %></h3>
                <div class="product-price">
                  <% if (relatedProduct.discountPrice > 0) { %>
                    <span class="original-price">$<%= relatedProduct.price.toFixed(2) %></span>
                    <span class="discount-price">$<%= relatedProduct.discountPrice.toFixed(2) %></span>
                  <% } else { %>
                    <span class="current-price">$<%= relatedProduct.price.toFixed(2) %></span>
                  <% } %>
                </div>
                <div class="mini-commission">
                  <span>Komisi: <%= relatedProduct.totalCommission ? relatedProduct.formattedCommission : '$' + (relatedProduct.price * relatedProduct.commission / 100).toFixed(2) + '+' %></span>
                </div>
                <a href="/products/<%= relatedProduct._id %>" class="view-product-btn">Lihat Produk</a>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
  </div>
  
