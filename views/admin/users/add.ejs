<%- include('../../partials/admin-header') %>

<div class="admin-container">
  <%- include('../../partials/admin-sidebar', { active: 'users' }) %>
  
  <main class="admin-content">
    <div class="admin-header">
      <h1>Tambah Pengguna Baru</h1>
      <p>Lengkapi form berikut untuk menambahkan pengguna baru</p>
    </div>
    
    <div class="admin-form">
      <form action="/admin/users/add" method="POST">
        <div class="form-row">
          <div class="form-group">
            <label for="username">Username <span class="required">*</span></label>
            <input type="text" id="username" name="username" required placeholder="Masukkan username">
          </div>
          
          <div class="form-group">
            <label for="email">Email <span class="required">*</span></label>
            <input type="email" id="email" name="email" required placeholder="Masukkan email">
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="password">Password <span class="required">*</span></label>
            <input type="password" id="password" name="password" required placeholder="Masukkan password">
          </div>
          
          <div class="form-group">
            <label for="role">Role <span class="required">*</span></label>
            <select id="role" name="role" required>
              <option value="user">User</option>
              <option value="admin">Admin</option>
            </select>
          </div>
        </div>
        
        <div class="form-row">
          <div class="form-group">
            <label for="fullName">Nama Lengkap</label>
            <input type="text" id="fullName" name="fullName" placeholder="Masukkan nama lengkap">
          </div>
          
          <div class="form-group">
            <label for="phone">Nomor Telepon</label>
            <input type="tel" id="phone" name="phone" placeholder="Masukkan nomor telepon">
          </div>
        </div>
        
        <div class="form-actions">
          <a href="/admin/users" class="btn btn-secondary">Batal</a>
          <button type="submit" class="btn btn-primary">Simpan Pengguna</button>
        </div>
      </form>
    </div>
  </main>
</div>

<style>
  .form-row {
    display: grid;
    grid-template-columns: 1fr;
    gap: 20px;
    margin-bottom: 0;
  }
  
  @media (min-width: 768px) {
    .form-row {
      grid-template-columns: 1fr 1fr;
    }
  }
  
  .form-group-full {
    grid-column: 1 / -1;
  }
  
  .required {
    color: var(--admin-danger);
  }
</style>

<%- include('../../partials/admin-footer') %>