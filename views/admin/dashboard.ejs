<%- include('../partials/admin-header') %>

<div class="admin-container">
  <%- include('../partials/admin-sidebar', { active: 'dashboard' }) %>
  
  <main class="admin-content">
    <div class="admin-header">
      <h1>Dashboard</h1>
      <p>Selamat datang di Panel Admin Taplink!</p>
    </div>
    
    <% if (typeof success !== 'undefined' && success && success.length > 0) { %>
      <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <%= success %>
      </div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error && error.length > 0) { %>
      <div class="alert alert-error">
        <i class="fas fa-exclamation-circle"></i>
        <%= error %>
      </div>
    <% } %>
    
    <div class="stats-container">
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-box"></i>
        </div>
        <div class="stat-info">
          <h2><%= typeof totalProducts !== 'undefined' ? totalProducts : 0 %></h2>
          <p>Total Produk</p>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-tags"></i>
        </div>
        <div class="stat-info">
          <h2><%= typeof totalCategories !== 'undefined' ? totalCategories : 0 %></h2>
          <p>Total Kategori</p>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-users"></i>
        </div>
        <div class="stat-info">
          <h2><%= typeof totalUsers !== 'undefined' ? totalUsers : 0 %></h2>
          <p>Total Pengguna</p>
        </div>
      </div>
      
      <div class="stat-card">
        <div class="stat-icon">
          <i class="fas fa-user-shield"></i>
        </div>
        <div class="stat-info">
          <h2><%= typeof totalAdmins !== 'undefined' ? totalAdmins : 0 %></h2>
          <p>Total Admin</p>
        </div>
      </div>
    </div>
    
    <div class="dashboard-sections">
      <div class="dashboard-section">
        <div class="section-header">
          <h2>Produk Terbaru</h2>
          <a href="/admin/products" class="view-all">
            Lihat Semua <i class="fas fa-chevron-right"></i>
          </a>
        </div>
        
        <div class="table-container">
          <table class="admin-table">
            <thead>
              <tr>
                <th>Produk</th>
                <th>Kategori</th>
                <th>Harga</th>
                <th>Komisi</th>
                <th>Tanggal</th>
              </tr>
            </thead>
            <tbody>
              <% if (typeof latestProducts !== 'undefined' && latestProducts && latestProducts.length > 0) { %>
                <% latestProducts.forEach(product => { %>
                  <tr>
                    <td>
                      <div class="product-cell">
                        <img src="<%= product.image %>" alt="<%= product.name %>" class="product-thumbnail">
                        <span><%= product.name.length > 30 ? product.name.substring(0, 30) + '...' : product.name %></span>
                      </div>
                    </td>
                    <td><%= product.category ? product.category.name : 'Uncategorized' %></td>
                    <td><%= typeof product.price === 'number' ? 'Rp ' + product.price.toLocaleString('id-ID') : 'Rp 0' %></td>
                    <td>
                      <%= typeof formatCurrency !== 'undefined' ? 
                          formatCurrency(product.totalCommission || (product.price * product.commission / 100)) : 
                          'Rp ' + (product.totalCommission || (product.price * product.commission / 100)).toLocaleString('id-ID') %>
                    </td>
                    <td><%= new Date(product.createdAt).toLocaleDateString('id-ID') %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="no-data">Belum ada produk</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
      
      <div class="dashboard-section">
        <div class="section-header">
          <h2>Pengguna Terbaru</h2>
          <a href="/admin/users" class="view-all">
            Lihat Semua <i class="fas fa-chevron-right"></i>
          </a>
        </div>
        
        <div class="table-container">
          <table class="admin-table">
            <thead>
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Status</th>
                <th>Tanggal Bergabung</th>
              </tr>
            </thead>
            <tbody>
              <% if (typeof latestUsers !== 'undefined' && latestUsers && latestUsers.length > 0) { %>
                <% latestUsers.forEach(user => { %>
                  <tr>
                    <td><%= user.username %></td>
                    <td><%= user.email %></td>
                    <td><span class="badge <%= user.role === 'admin' ? 'badge-admin' : 'badge-user' %>"><%= user.role %></span></td>
                    <td><span class="badge <%= user.isActive ? 'badge-active' : 'badge-inactive' %>"><%= user.isActive ? 'Aktif' : 'Nonaktif' %></span></td>
                    <td><%= new Date(user.createdAt).toLocaleDateString('id-ID') %></td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="no-data">Belum ada pengguna</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>

<%- include('../partials/admin-footer') %>